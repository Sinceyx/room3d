{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es6",
    "module": "es6",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitThis": true,
    "paths": {
      "@/*": [
        "src/*.ts"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "es6"
    ]
  },
  "include": [
    // "src/**/*.ts",
    // "src/**/*.tsx",
    // "src/**/*.vue",
    // "tests/**/*.ts",
    // "tests/**/*.tsx",
    "./"
  ],
  "exclude": [
    "node_modules",
    "./lib/*"
  ],
  "typedocOptions": {
    "mode": "modules",
  }
}
